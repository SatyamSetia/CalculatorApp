<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.calculator.MainActivity">

    <TextView
        android:id="@+id/answer"
        android:layout_width="match_parent"
        android:layout_height="230dp" />

    <TextView
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="8dp"
        android:hint="0"
        android:textSize="20dp"
        android:gravity="right" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/nine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/buttonBarButtonStyle"
                android:background="#ECEFF1"
                android:text="9"
                android:textSize="20dp"
                android:layout_weight="1"
                android:onClick="nineClicked"/>

            <Button
                android:id="@+id/eight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/buttonBarButtonStyle"
                android:background="#ECEFF1"
                android:text="8"
                android:textSize="20dp"
                android:layout_weight="1"
                android:onClick="eightClicked"/>

            <Button
                android:id="@+id/seven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/buttonBarButtonStyle"
                android:background="#ECEFF1"
                android:text="7"
                android:textSize="20dp"
                android:layout_weight="1"
                android:onClick="sevenClicked"/>

            <Button
                android:id="@+id/multiply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/buttonBarButtonStyle"
                android:background="#00BCD4"
                android:textColor="#ffffff"
                android:text="*"
                android:textSize="20dp"
                android:layout_weight="1"
                android:onClick="findProduct"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/six"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/buttonBarButtonStyle"
                android:background="#ECEFF1"
                android:text="6"
                android:textSize="20dp"
                android:layout_weight="1"
                android:onClick="sixClicked"/>

            <Button
                android:id="@+id/five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/buttonBarButtonStyle"
                android:background="#ECEFF1"
                android:text="5"
                android:textSize="20dp"
                android:layout_weight="1"
                android:onClick="fiveClicked"/>

            <Button
                android:id="@+id/four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/buttonBarButtonStyle"
                android:background="#ECEFF1"
                android:text="4"
                android:textSize="20dp"
                android:layout_weight="1"
                android:onClick="fourClicked"/>

            <Button
                android:id="@+id/divide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/buttonBarButtonStyle"
                android:background="#00BCD4"
                android:textColor="#ffffff"
                android:text="/"
                android:textSize="20dp"
                android:layout_weight="1"
                android:onClick="findQuotient"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/buttonBarButtonStyle"
                android:background="#ECEFF1"
                android:text="3"
                android:textSize="20dp"
                android:layout_weight="1"
                android:onClick="threeClicked"/>

            <Button
                android:id="@+id/two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/buttonBarButtonStyle"
                android:background="#ECEFF1"
                android:text="2"
                android:textSize="20dp"
                android:layout_weight="1"
                android:onClick="twoClicked"/>

            <Button
                android:id="@+id/one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/buttonBarButtonStyle"
                android:background="#ECEFF1"
                android:text="1"
                android:textSize="20dp"
                android:layout_weight="1"
                android:onClick="oneClicked"/>

            <Button
                android:id="@+id/plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/buttonBarButtonStyle"
                android:background="#00BCD4"
                android:textColor="#ffffff"
                android:text="+"
                android:textSize="20dp"
                android:layout_weight="1"
                android:onClick="findSum"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
            android:id="@+id/openBracket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/buttonBarButtonStyle"
            android:background="#ECEFF1"
            android:text="("
            android:textSize="20dp"
            android:layout_weight="1"
            android:onClick="addOpenBracket"/>

            <Button
                android:id="@+id/zero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/buttonBarButtonStyle"
                android:background="#ECEFF1"
                android:text="0"
                android:textSize="20dp"
                android:layout_weight="1"
                android:onClick="zeroClicked"/>

            <Button
                android:id="@+id/closeBracket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/buttonBarButtonStyle"
                android:background="#ECEFF1"
                android:text=")"
                android:textSize="20dp"
                android:layout_weight="1"
                android:onClick="addCloseBracket"/>

            <Button
                android:id="@+id/minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/buttonBarButtonStyle"
                android:background="#00BCD4"
                android:textColor="#ffffff"
                android:text="-"
                android:textSize="20dp"
                android:layout_weight="1"
                android:onClick="findDifference"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/dot"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                style="?android:attr/buttonBarButtonStyle"
                android:background="#ECEFF1"
                android:text="."
                android:textSize="20dp"
                android:onClick="dotClicked"/>

            <Button
                android:id="@+id/equal"
                android:layout_width="174dp"
                android:layout_height="wrap_content"
                style="?android:attr/buttonBarButtonStyle"
                android:background="#ECEFF1"
                android:text="="
                android:textSize="20dp"
                android:onClick="findAnswer"/>

            <Button
                android:id="@+id/delete"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                style="?android:attr/buttonBarButtonStyle"
                android:background="#00BCD4"
                android:textColor="#ffffff"
                android:text="DEL"
                android:textSize="20dp"
                android:onClick="deleteLast"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
